// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  RECRUITER
  CANDIDATE
}

enum jobDuration {
  FULL_TIME
  PART_TIME
  CONTRACT
  INTERNSHIP
}

enum workType {
  REMOTE
  ONSITE
  HYBRID
}

model User {
  id          Int       @id @default(autoincrement())
  email       String    @unique
  pin         String
  firstName   String?
  lastName    String?
  phoneNumber String?
  dateOfBirth DateTime?
  jobRole     String[]
  sex         String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  role        UserRole  @default(CANDIDATE)
  JobCreated         Job[]
}

model Job {
  id              Int         @id @default(autoincrement())
  title           String
  jobDescription  String
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  company        String
  companyLocation String
  jobDuration     String
  workType     String
  experience String
  postedById      Int
  postedBy        User        @relation(fields: [postedById], references: [id])
}
